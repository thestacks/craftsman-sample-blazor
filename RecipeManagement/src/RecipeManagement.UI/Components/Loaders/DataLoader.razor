<div>
    @if (IsLoading)
    {
        <div class="data-loader">
            <i class="rzi loader-icon">refresh</i>
        </div>
    }
    else
    {
        @ChildContent
    }    
</div>

@code {
    [Parameter] public bool IsLoading { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
}